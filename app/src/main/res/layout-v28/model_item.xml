<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.categoryexample.ui.component.BindingAdapterKt"/>

        <variable
            name="model"
            type="com.example.categoryexample.domain.model.Model" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_model_item_background"
>

        <ImageView
            android:id="@+id/modelImgView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:imageUrl="@{model.image}"
            tools:ignore="VisualLintBounds"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/modelNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:textFontWeight="400"
                android:gravity="top"
                android:textSize="20sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@{model.name}" />
            <TextView
                android:id="@+id/modelAvailableTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_ui"
                android:layout_weight="1"
                android:textFontWeight="300"
                android:gravity="bottom"
                android:textSize="20sp"
                android:text="Available: 0 | Loanable: 8" />
        </LinearLayout>

        <Button
            android:id="@+id/myButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="Add To Cart"
            android:paddingVertical="20dp"
            android:paddingHorizontal="40dp"
            android:clickable="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            app:cornerRadius="60dp"
            android:backgroundTint="@color/greyF4F4F4"/>

    </LinearLayout>
</layout>